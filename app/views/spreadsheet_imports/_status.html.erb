<div class="bg-white rounded-lg border border-gray-200 p-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <% case import.status %>
      <% when "pending" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          Pending
        </span>
        <span class="text-sm text-gray-600">Waiting to start...</span>
      <% when "parsing" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          Parsing
        </span>
        <span class="text-sm text-gray-600">
          Parsed <%= import.parsed_rows %> of <%= import.total_rows %> rows
          (<%= import.parsed_percentage %>%)
        </span>
      <% when "parsed" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Parsed
        </span>
        <span class="text-sm text-gray-600">
          <%= import.parsed_rows %> rows parsed across <%= import.sheet_names.size %> sheets
        </span>
      <% when "mapping" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
          AI Mapping
        </span>
        <span class="text-sm text-gray-600">
          Mapped <%= import.mapped_rows %> of <%= import.total_rows %> rows
          (<%= import.mapped_percentage %>%)
        </span>
      <% when "mapped" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
          Mapped
        </span>
        <span class="text-sm text-gray-600">
          <%= import.mapped_rows %> rows mapped — ready for review
        </span>
      <% when "executing" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
          Importing
        </span>
        <span class="text-sm text-gray-600">
          Imported <%= import.executed_rows %> of <%= import.importable_rows_count %> rows
          (<%= import.executed_percentage %>%)
        </span>
      <% when "executed" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Completed
        </span>
        <span class="text-sm text-green-700">Import completed successfully</span>
      <% when "failed" %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          Failed
        </span>
        <span class="text-sm text-red-600"><%= import.error_message %></span>
      <% end %>
    </div>

    <div class="flex items-center gap-3">
      <% if import.parsed? %>
        <span class="text-xs text-gray-500">
          Sheets: <%= import.sheet_names.join(", ") %>
        </span>
      <% end %>

      <% if import.parsed? || import.failed? %>
        <%= link_to start_mapping_spreadsheet_import_path(import),
              data: { turbo_method: :post },
              class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-md transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
          <%= import.failed? ? "Retry AI Mapping" : "Start AI Mapping" %>
        <% end %>
      <% end %>

      <% if import.mapped? %>
        <%= link_to review_spreadsheet_import_path(import),
              class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-md transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          Review Mappings
        <% end %>

        <%= link_to confirm_spreadsheet_import_path(import),
              class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 rounded-md transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Confirm &amp; Import
        <% end %>
      <% end %>
    </div>
  </div>

  <% if import.parsing? && import.total_rows > 0 %>
    <div class="mt-3">
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
             style="width: <%= import.parsed_percentage %>%"></div>
      </div>
    </div>
  <% end %>

  <% if import.mapping? && import.total_rows > 0 %>
    <div class="mt-3">
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-indigo-600 h-2 rounded-full transition-all duration-300"
             style="width: <%= import.mapped_percentage %>%"></div>
      </div>
    </div>
  <% end %>

  <% if import.executing? %>
    <div class="mt-3">
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-amber-500 h-2 rounded-full transition-all duration-300"
             style="width: <%= import.executed_percentage %>%"></div>
      </div>
    </div>
  <% end %>
</div>

<% if import.executed? && import.import_report.present? %>
  <div class="mt-4 bg-white rounded-lg border border-gray-200 p-4">
    <h3 class="text-sm font-medium text-gray-900 mb-3">Import Summary</h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
      <div class="text-center">
        <div class="text-xl font-bold text-green-600"><%= import.import_report["plants_created"] || 0 %></div>
        <div class="text-xs text-gray-500">Plants created</div>
      </div>
      <div class="text-center">
        <div class="text-xl font-bold text-blue-600"><%= import.import_report["purchases_created"] || 0 %></div>
        <div class="text-xs text-gray-500">Purchases created</div>
      </div>
      <div class="text-center">
        <div class="text-xl font-bold text-purple-600"><%= import.import_report["sources_created"] || 0 %></div>
        <div class="text-xs text-gray-500">Sources created</div>
      </div>
      <div class="text-center">
        <div class="text-xl font-bold text-indigo-600"><%= import.import_report["categories_created"] || 0 %></div>
        <div class="text-xs text-gray-500">Categories created</div>
      </div>
      <div class="text-center">
        <div class="text-xl font-bold text-teal-600"><%= import.import_report["subcategories_created"] || 0 %></div>
        <div class="text-xs text-gray-500">Subcategories created</div>
      </div>
      <div class="text-center">
        <div class="text-xl font-bold text-gray-600"><%= import.import_report["rows_skipped"] || 0 %></div>
        <div class="text-xs text-gray-500">Rows skipped</div>
      </div>
    </div>

    <% errors = import.import_report["errors"] %>
    <% if errors.present? && errors.any? %>
      <div class="mt-4 border-t border-gray-200 pt-3">
        <h4 class="text-sm font-medium text-red-700 mb-2">Errors (<%= errors.size %>)</h4>
        <ul class="text-sm text-red-600 space-y-1">
          <% errors.each do |error| %>
            <li>
              Row <%= error["row_number"] %> (<%= error["sheet"] %> — <%= error["variety"] %>): <%= error["error"] %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-4 border-t border-gray-200 pt-3">
      <%= link_to root_path, class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-md transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        View Inventory
      <% end %>
    </div>
  </div>
<% end %>
