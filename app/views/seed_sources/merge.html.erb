<%= render PageHeaderComponent.new(title: "Merge Seed Sources", subtitle: "Choose a primary source and merge the others into it") %>

<%= form_tag execute_merge_seed_sources_path, method: :post, data: { turbo_confirm: "Are you sure? This will merge all selected sources into the primary and delete the duplicates." } do %>
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <p class="text-sm text-gray-600">
        Select the <strong>primary</strong> source to keep. All seed purchases from the other sources will be reassigned to it, and the duplicate sources will be deleted.
      </p>
    </div>

    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-10">Primary</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Purchases</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active Purchases</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @sources.each do |source| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-4">
              <input type="radio" name="primary_id" value="<%= source.id %>" required class="border-gray-300 text-indigo-600 focus:ring-indigo-500" <%= "checked" if source == @sources.first %>>
              <input type="hidden" name="merge_ids[]" value="<%= source.id %>">
            </td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= source.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <% if source.url.present? %>
                <%= link_to truncate(source.url, length: 40), source.url, target: "_blank", rel: "noopener noreferrer", class: "text-green-600 hover:text-green-800 hover:underline" %>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= source.seed_purchases.size %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= source.active_purchases_count %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= truncate(source.notes, length: 60) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6 flex items-center gap-4">
    <button type="submit" class="inline-flex items-center gap-1.5 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 transition-colors">
      Merge Sources
    </button>
    <%= link_to "Cancel", seed_sources_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
  </div>
<% end %>
