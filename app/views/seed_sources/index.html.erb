<%= render PageHeaderComponent.new(title: "Seed Sources", subtitle: "Manage your seed suppliers and vendors") do |component| %>
  <% component.with_actions do %>
    <%= link_to "New Seed Source", new_seed_source_path, class: "inline-flex items-center gap-1.5 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 transition-colors" %>
  <% end %>
<% end %>

<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active Purchases</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @seed_sources.each do |seed_source| %>
        <%= turbo_frame_tag seed_source do %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= seed_source.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <% if seed_source.url.present? %>
                <%= link_to truncate(seed_source.url, length: 40), seed_source.url, target: "_blank", rel: "noopener noreferrer", class: "text-green-600 hover:text-green-800 hover:underline" %>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= seed_source.active_purchases_count %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= truncate(seed_source.notes, length: 60) %></td>
            <td class="px-6 py-4 text-sm text-right space-x-2">
              <%= link_to "Edit", edit_seed_source_path(seed_source), class: "text-green-600 hover:text-green-800" %>
              <% if seed_source.deletable? %>
                <%= button_to "Delete", seed_source_path(seed_source), method: :delete,
                  class: "text-red-600 hover:text-red-800",
                  form: { data: { turbo_confirm: "Are you sure you want to delete #{seed_source.name}?" } } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
      <% if @seed_sources.empty? %>
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500">No seed sources yet. Create one to get started.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
