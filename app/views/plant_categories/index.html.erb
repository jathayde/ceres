<%= render PageHeaderComponent.new(title: @plant_type.name, subtitle: "Categories within #{@plant_type.name}") do |component| %>
  <% component.with_actions do %>
    <%= link_to "New Category", new_plant_type_plant_category_path(@plant_type), class: "inline-flex items-center gap-1.5 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 transition-colors" %>
  <% end %>
<% end %>

<nav class="mb-6 text-sm text-gray-500">
  <%= link_to "Plant Types", plant_types_path, class: "text-green-600 hover:text-green-800" %>
  <span class="mx-1">/</span>
  <span class="text-gray-900"><%= @plant_type.name %></span>
</nav>

<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Latin Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Viability (yrs)</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subcategories</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plants</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @plant_categories.each do |category| %>
        <%= turbo_frame_tag category do %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm text-gray-500"><%= category.position %></td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= category.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500 italic">
              <% if category.latin_genus.present? %>
                <%= category.latin_genus %> <%= category.latin_species %>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= category.expected_viability_years %></td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <%= link_to pluralize(category.plant_subcategories.size, "subcategory"), plant_type_plant_category_plant_subcategories_path(@plant_type, category), class: "text-green-600 hover:text-green-800 hover:underline" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= category.plants.size %></td>
            <td class="px-6 py-4 text-sm text-right space-x-2">
              <%= link_to "Edit", edit_plant_type_plant_category_path(@plant_type, category), class: "text-green-600 hover:text-green-800" %>
              <% if category.deletable? %>
                <%= button_to "Delete", plant_type_plant_category_path(@plant_type, category), method: :delete,
                  class: "text-red-600 hover:text-red-800",
                  form: { data: { turbo_confirm: "Are you sure you want to delete #{category.name}?" } } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
      <% if @plant_categories.empty? %>
        <tr>
          <td colspan="7" class="px-6 py-8 text-center text-sm text-gray-500">No categories yet. Create one to get started.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
