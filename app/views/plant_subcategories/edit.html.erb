<%= turbo_frame_tag @plant_subcategory do %>
  <%= render PageHeaderComponent.new(title: "Edit Subcategory") %>

  <nav class="mb-6 text-sm text-gray-500">
    <%= link_to "Plant Types", plant_types_path, class: "text-green-600 hover:text-green-800" %>
    <span class="mx-1">/</span>
    <%= link_to @plant_type.name, plant_type_plant_categories_path(@plant_type), class: "text-green-600 hover:text-green-800" %>
    <span class="mx-1">/</span>
    <%= link_to @plant_category.name, plant_type_plant_category_plant_subcategories_path(@plant_type, @plant_category), class: "text-green-600 hover:text-green-800" %>
    <span class="mx-1">/</span>
    <span class="text-gray-900">Edit <%= @plant_subcategory.name %></span>
  </nav>

  <div class="max-w-2xl">
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <%= render "form", plant_subcategory: @plant_subcategory %>
    </div>
  </div>
<% end %>
