<header class="bg-white border-b border-gray-200 fixed top-0 left-0 right-0 z-50" data-controller="nav-toggle">
  <nav class="container mx-auto px-5">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-8">
        <%= link_to root_path, class: "flex items-center gap-2 text-green-700 hover:text-green-800" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M7 20h10"/>
            <path d="M10 20c5.5-2.5.8-6.4 3-10"/>
            <path d="M9.5 9.4c1.1.8 1.8 2.2 2.3 3.7-2 .4-3.5.4-4.8-.3-1.2-.6-2.3-1.9-3-4.2 2.8-.5 4.4 0 5.5.8z"/>
            <path d="M14.1 6a7 7 0 0 0-1.1 4c1.9-.1 3.3-.6 4.3-1.4 1-1 1.6-2.3 1.7-4.6-2.7.1-4 1-4.9 2z"/>
          </svg>
          <span class="text-lg font-semibold">Ceres</span>
        <% end %>

        <div class="hidden md:flex items-center gap-1">
          <% nav_items.each do |item| %>
            <%= link_to item.label, item.path,
                  class: class_names(
                    "px-3 py-2 rounded-md text-sm font-medium transition-colors",
                    "bg-green-50 text-green-700" => item.active,
                    "text-gray-600 hover:text-gray-900 hover:bg-gray-50" => !item.active
                  ) %>
          <% end %>
        </div>
      </div>

      <button type="button"
              class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100"
              data-action="nav-toggle#toggle"
              aria-expanded="false"
              aria-label="Toggle navigation">
        <svg class="h-6 w-6" data-nav-toggle-target="openIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <svg class="h-6 w-6 hidden" data-nav-toggle-target="closeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div class="hidden md:hidden pb-3" data-nav-toggle-target="menu">
      <div class="flex flex-col gap-1">
        <% nav_items.each do |item| %>
          <%= link_to item.label, item.path,
                class: class_names(
                  "px-3 py-2 rounded-md text-sm font-medium transition-colors",
                  "bg-green-50 text-green-700" => item.active,
                  "text-gray-600 hover:text-gray-900 hover:bg-gray-50" => !item.active
                ) %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
